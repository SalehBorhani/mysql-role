[mysqld]
user		= mysql
# pid-file	= /var/run/mysqld/mysqld.pid
# socket	= /var/run/mysqld/mysqld.sock
# port		= 3306
# datadir	= /var/lib/mysql

{% if mysql_replication_role == "master" %}
bind-address		= {{ hostvars['mysql_master'].ansible_host }}
mysqlx-bind-address	= {{ hostvars['mysql_master'].ansible_host }}
{% endif %}

{% if mysql_replication_role == "slave" %}
bind-address		= {{ hostvars['mysql_slave'].ansible_host }}
mysqlx-bind-address	= {{ hostvars['mysql_slave'].ansible_host }}

# Slave specific configuration
relay_log = /var/log/mysql/mysql-relay-bin.log
{% endif %}

key_buffer_size		= 16M
# max_allowed_packet	= 64M
# thread_stack		= 256K

# thread_cache_size       = -1
myisam-recover-options  = BACKUP

# max_connections        = 151

# table_open_cache       = 4000

log_error = /var/log/mysql/error.log
server-id               = {{ server_id }}
log_bin                 = /var/log/mysql/mysql-bin.log

# binlog_expire_logs_seconds	= 2592000
max_binlog_size   = 100M
# binlog_do_db		= include_database_name
# binlog_ignore_db	= include_database_name

{% if gtid_based %}
gtid_mode = ON
enforce_gtid_consistency = ON
binlog_format = ROW
{% endif %}